- scope, items = ['services', service.first], service.last
.section{ :id => t :id, :scope => scope, :style => "background:url('#{image_path("services/#{service.first}.png")}') bottom right no-repeat;" }
  %h2
    = t :title, :scope => scope
  %ul.with_image
    %li
      = t(items, :scope => scope).join '</li><li>'
